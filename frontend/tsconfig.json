{
  "compilerOptions": {
    "strictPropertyInitialization": true,
    "allowJs": true,
    "baseUrl": ".",
    "downlevelIteration": true,
    "esModuleInterop": true,
    "isolatedModules": true,
    "jsx": "react-jsx",
    "lib": ["es2021", "dom"],
    "module": "esnext",
    "moduleResolution": "node",
    "noEmit": true,
    "noImplicitAny": true,
    "noUncheckedIndexedAccess": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "outDir": "./dist",
    "paths": {
      "@*": ["./src/*"],
      "@assets": ["./src/assets/*"],
      "@presentation/*": ["./src/presentation/*"],
      "@presentation": ["./src/presentation/"],
      "@data/*": ["./src/data/*"],
      "@data": ["./src/data/"],
      "@main/*": ["./src/main/*"],
      "@main": ["./src/main/"],
      "@infra/*": ["./src/infra/*"],
      "@infra": ["./src/infra/"],
      "@test/*": ["./test/*"],
      "@pages/*": ["./src/presentation/pages/*"],
      "@layout": ["./src/main/factories/pages/layout"],
      "@types/*": ["./src/@types/*"],
      "@contracts/*": ["./src/@types/contracts/*"],
      "@utils": ["./src/utils/"],
      "@utils/": ["./src/utils/*"],
      "@Callbacks": ["src/infra/callbacks/"],
      "@Callbacks/": ["./src/infra/callbacks/*"],
      "@hooks": ["./src/infra/hooks/*"],
      "@hooks/": ["./src/infra/hooks/"],
      "@domain/*": ["./src/domain/*"],
      "@domain/errors/": ["./src/domain/errors/"],
    },
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "strict": true,
    "strictNullChecks": true,
    "target": "es2021",
  },
  "exclude": ["**/node_modules/**", "**/dist/**"],
  "include": [
    "src/**/*",
    "test/**/*",
    "vitest.config.ts"
  ]
}
